<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.carthage.zorpix.phonechooser.TipActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Here are your tip amounts!"
        android:id="@+id/tipblurb"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="10% (Okay)"
        android:id="@+id/okay"
        android:layout_below="@+id/tipblurb"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="15% (Good)"
        android:id="@+id/good"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/okay"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="20% (Great)"
        android:id="@+id/great"
        android:layout_alignBaseline="@+id/greattip"
        android:layout_alignBottom="@+id/greattip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/okaytip"
        android:layout_alignTop="@+id/okay"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="true"
        android:layout_gravity="right"
        android:singleLine="false"
        android:gravity="right" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/goodtip"
        android:layout_alignTop="@+id/good"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="true"
        android:layout_gravity="right"
        android:singleLine="false"
        android:gravity="right" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/greattip"
        android:layout_below="@+id/goodtip"
        android:layout_alignLeft="@+id/goodtip"
        android:layout_alignStart="@+id/goodtip"
        android:layout_marginTop="30dp"
        android:layout_gravity="right"
        android:singleLine="false"
        android:layout_alignParentRight="false"
        android:gravity="right" />
</RelativeLayout>
