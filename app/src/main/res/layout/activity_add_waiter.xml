<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.carthage.zorpix.phonechooser.AddWaiter">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/name"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="Server Name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tipercent"
        android:layout_below="@+id/name"
        android:layout_alignLeft="@+id/name"
        android:layout_alignStart="@+id/name"
        android:layout_alignRight="@+id/name"
        android:layout_alignEnd="@+id/name"
        android:hint="Percent Tipped" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/restaurant"
        android:layout_below="@+id/tipercent"
        android:layout_alignLeft="@+id/tipercent"
        android:layout_alignStart="@+id/tipercent"
        android:layout_alignRight="@+id/tipercent"
        android:layout_alignEnd="@+id/tipercent"
        android:hint="Restaurant Name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notes"
        android:layout_below="@+id/restaurant"
        android:layout_alignLeft="@+id/restaurant"
        android:layout_alignStart="@+id/restaurant"
        android:layout_alignRight="@+id/restaurant"
        android:layout_alignEnd="@+id/restaurant"
        android:lines="4"
        android:hint="Notes" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Waiter"
        android:id="@+id/addWaiter"
        android:layout_below="@+id/notes"
        android:layout_alignRight="@+id/notes"
        android:layout_alignEnd="@+id/notes"
        android:onClick="addtime"/>
</RelativeLayout>
